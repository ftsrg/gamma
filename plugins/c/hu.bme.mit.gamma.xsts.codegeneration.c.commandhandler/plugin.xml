<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension point="org.eclipse.ui.commands">
    	<command description="Generate C Code" id="hu.bme.mit.gamma.xsts.codegeneration.c.commandhandler.Generate" name="Generate C Code"></command>
    </extension>
    
    <extension point="org.eclipse.ui.handlers">
      <handler class="hu.bme.mit.gamma.xsts.codegeneration.c.commandhandler.CommandHandler" commandId="hu.bme.mit.gamma.xsts.codegeneration.c.commandhandler.Generate"></handler>
    </extension>
    
    <extension point="org.eclipse.ui.menus">
        
      <menuContribution allPopups="false" locationURI="popup:org.eclipse.ui.popup.any">
		
		<command commandId="hu.bme.mit.gamma.xsts.codegeneration.c.commandhandler.Generate" label="Generate C Code" style="push" tooltip="Generate C Code">
		  <visibleWhen checkEnabled="false">
		    <iterate ifEmpty="false" operator="or">
		      <test property="org.eclipse.core.resources.name" value="*.gsts"></test>
		    </iterate>
		  </visibleWhen>
		</command>
		
      </menuContribution>
	    
    </extension>

</plugin>
