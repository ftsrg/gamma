 </extension>
 <extension
       point="org.eclipse.ui.navigator.navigatorContent">
    <commonWizard
          menuGroupId="hu.bme.mit.gamma"
          type="new"
          wizardId="hu.bme.mit.gamma.ui.wizards.NewGammaPropertyWizard">
       <enablement>
          <or>
             <adapt
                   type="org.eclipse.core.resources.IFile">
             </adapt>
             <adapt
                   type="org.eclipse.core.resources.IFolder">
             </adapt>
             <adapt
                   type="org.eclipse.core.resources.IProject">
             </adapt>
          </or>
       </enablement>
    </commonWizard>
 </extension>
 
 
 <extension
       point="org.eclipse.ui.perspectives">
    <perspective
          class="hu.bme.mit.gamma.gui.perspectives.GammaPerspectiveFactory"
          fixed="false"
          icon="icons/gamma-icon-16.png"
          id="hu.bme.mit.gamma.gui.perspective"
          name="Gamma Perspective">
    </perspective>
 </extension>
 <extension
       point="org.eclipse.ui.perspectiveExtensions">
    <perspectiveExtension
          targetID="hu.bme.mit.gamma.gui.perspective">
    </perspectiveExtension>
 </extension>

</plugin>
